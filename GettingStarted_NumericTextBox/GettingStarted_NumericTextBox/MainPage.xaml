<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:GettingStarted_NumericTextBox"
             xmlns:numeric="clr-namespace:Syncfusion.SfNumericTextBox.XForms;assembly=Syncfusion.SfNumericTextBox.XForms"
             x:Class="GettingStarted_NumericTextBox.MainPage">

    <StackLayout>

        <StackLayout Margin="50">
            <StackLayout Orientation="Horizontal">
                <Label Text="Switch with enable/disable the SfNumericTextBox:"/>
                <Switch Toggled="Switch_Toggled" IsToggled="True"/>
            </StackLayout>
            <numeric:SfNumericTextBox x:Name="numericTextBox" Margin="0,20,0,0" Style="{StaticResource NumericTextBoxStyle}" Value="50"/>
        </StackLayout>

    </StackLayout>

</ContentPage>
